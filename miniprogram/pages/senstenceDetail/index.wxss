page{
  overflow:hidden;
  height:100%;
  width: 100%;
}
.page-section{
  height:100%;
  width:100%;

}
.swiperClass{
  height:100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.card{
    /* border:solid 3px #1f7db3; */
    overflow-y: auto;
    margin-top: 10px;
    /* border: 1px solid #ccc; */
    box-shadow: 1px 8px 8px 1px rgba(0,0,0,0.2);
    transition: 0.3s;
    /* border-radius: 5px; */
    margin-right: 10px;
    margin-left:10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-bottom-left-radius:140px;
    border-bottom-right-radius:10px;
}
.card-inner-line{
  position: fixed;
  left:0;
  width:100%;
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  padding-right: 10px;
  padding-bottom: 10px;
  flex-wrap: wrap;
  font-size:13px;
  text-indent: 20px;
  height: 50px;
  border-top:2px solid #ccc;
