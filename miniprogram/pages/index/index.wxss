page {
  overflow: hidden;
  height: 100%;
  width: 100%;
}

.page-section {
  height: 100%;
  width: 100%;

}

.card-inner-line {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  padding-right: 10px;
  flex-wrap: wrap;
  font-size: 13px;
  text-indent: 20px;
  height: 50px;
  border-top: 2px solid #ccc;
}

.swiperClass {
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.card {
  /* border:solid 3px #1f7db3; */
  overflow-y: auto;
  margin-top: 10px;
  /* border: 1px solid #ccc; */
  box-shadow: 1px 8px 8px 1px rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  /* border-radius: 5px; */
  margin-right: 10px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom-left-radius: 140px;
  border-bottom-right-radius: 10px;
}

.cardSource {

  padding-bottom: 15px;
  padding-right: 10px;
  display: flex;
  justify-content: flex-end;
  width: 100%;

}

.cardSourceText {
  font-size: 15px;
  text-align: right;
}

.carPersonName {
  font-size: 15px;
  margin-top: 5px;
  margin-right: 10px;
  margin-left: 10px;
}

.font-margin-class {
  font-size: 20px;
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  text-indent: 2em;
}

.avatarClass {
  margin-bottom: 36px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rightFav {
  margin-top: 12px;
  display: flex;
  align-items: center;
  margin-right: 5px;
}

.avatarCustomClass {
  border: 2px solid #ccc;
  box-shadow: 7px 0px 7px rgba(0, 0, 0, 0.9)
}

.shareButtonClass {
  padding: 0px;
  margin: 0px;
  width: 48px;
  height: 30px;
  line-height: initial;
}